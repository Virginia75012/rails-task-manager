<h2><%= @task.title %></h2>
  <p><%= @task.details %></p>
    <% if @task.completed == true %>
      <p>[x] This task is completed</p>
    <% else %>
      <p>[ ] This task is not completed yet</p>
    <% end %>

<%= link_to "Back to the list", tasks_path %>
<%= link_to "Edit this task", edit_path(@task) %>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
